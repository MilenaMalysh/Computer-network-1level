<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--<item name="colorPrimaryLight">@color/primary_light</item>-->
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <!--Theme to style custom toolbars-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/icons</item>
    </style>
    <style name="IpEditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:lines">1</item>
        <item name="android:minEms">2</item>
        <item name="android:maxEms">2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:freezesText">false</item>
        <!--it's for custom saving: as all byteviews use the same ids, so EditText restores one value for all byteview with same id-->
        <item name="android:saveEnabled">false</item>
        <item name="android:text">0</item>
    </style>
    <style name="IpDivider">
        <item name="android:text">.</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Label">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="Label.Centered">
        <item name="android:layout_gravity">center</item>
    </style>
</resources>